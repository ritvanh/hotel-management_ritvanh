@model HotelManagement.Models.Room
    @using HotelManager.Models

        <div class="single-room mb-80" style="max-width:20%">
            <div class="room-img">
                <a href="#"><img src="@Url.Content(Model.photoPath)" width="370" height="256"  alt="Photo"></a>
            </div>
            <div class="room-desc">
                <div class="room-name">
                    <h3><a href="#">@Html.DisplayFor(modelItem => Model.roomName)</a></h3>
                </div>
                <div class="room-rent">
                    <h5>$@Html.DisplayFor(modelItem => Model.basePrice) / <span>Night</span></h5>
                </div>
                <div class="room-book">
                    @if (Session["role"] != null)
                    {
                        if ((Role)Session["role"] == Role.Manager || (Role)Session["role"] == Role.Supervisor)
                        {
                            @Html.ActionLink("Ndrysho", "Edit", new { id = Model.roomNumber })
                            @Html.ActionLink("Shih detaje", "Details", new { id = Model.roomNumber })
                            @Html.ActionLink("Fshij", "Delete", new { id = Model.roomNumber })
                        }
                    }
                    else
                    {
                            @Html.ActionLink("Rezervo", "AddReservation",new {id = Model.roomNumber})
                    }
                </div>
            </div>
        </div>