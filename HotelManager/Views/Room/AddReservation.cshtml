@model HotelManager.Models.Reservation
@using HotelManagement.Models
@{
    ViewBag.Title = "Add";
}

<h2>Rezervim i ri</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <div class="form-horizontal">
        <hr />
        <div class="our-room-show" style="display:block;margin:auto;">
            <div class="row">
                <div class="carousel-list" style="padding:30px;">
                    @Html.Partial("_RoomBooking", Room.GetRoomByNumber(Model.roomNumber))
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.roomNumber)

        <div class="form-group">
            @Html.LabelFor(model => model.arrivalDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.arrivalDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.arrivalDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.departionDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.departionDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.departionDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rezervo" class="btn btn-info" />
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <h4 class="alert alert-danger" style="text-align:center">@ViewBag.ErrorMessage</h4>
        }
    </div>
}
<script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.13.0.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $(".date-picker").datepicker();
    });
</script>
